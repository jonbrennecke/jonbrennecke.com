{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "types": ["react", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

