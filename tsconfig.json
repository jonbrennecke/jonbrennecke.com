{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "allowJs": true,
        "jsx": "preserve",
        "types": [
            "react",
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "isolatedModules": true,
        "incremental": true
    },
    "include": [
        "./global.d.ts",
    ]
}